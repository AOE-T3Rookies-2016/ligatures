{
  "name": "t3rookies/ligatures",
  "type": "typo3-cms-extension",
  "description": "Replaces ligatures in frontend to give better visual experience of a website",
  "license": ["GPL-2.0+"],
  "version": "1.0.0",
  "minimum-stability": "dev",
  "require": {
    "typo3/cms": ">=7.6.0,<8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.7.0"
  },
  "authors": [
    {
      "name": "Irena",
      "role": "Developer"
    },
    {
      "name": "Willy",
      "role": "Developer"
    },
    {
      "name": "Niels",
      "role": "Developer"
    },
    {
      "name": "Boban",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "T3ROOKIES\\Ligatures\\": "Classes",
      "T3ROOKIES\\Ligatures\\Tests\\": "Tests",
      "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/ligatures ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/ligatures"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    },
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}
